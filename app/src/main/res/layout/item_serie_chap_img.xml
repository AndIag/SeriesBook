<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="?attr/cardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imagePoster"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/no_poster" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/imagePoster"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/imagePoster"
            android:layout_toRightOf="@+id/imagePoster">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="The Walking Dead"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?attr/colorAccent" />

            <com.vi.swipenumberpicker.SwipeNumberPicker
                android:id="@+id/picker_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:snp_arrowColor="@android:color/white"
                app:snp_backgroundColor="?attr/colorAccent"
                app:snp_max="1000"
                app:snp_min="0"
                app:snp_numberColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/picker_chapter"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/chapter"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
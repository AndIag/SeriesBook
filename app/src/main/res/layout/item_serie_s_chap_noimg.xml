<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="?attr/cardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="The Walking Dead"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorAccent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textTitle"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="@string/season"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.vi.swipenumberpicker.SwipeNumberPicker
                android:id="@+id/picker_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:snp_arrowColor="@android:color/white"
                app:snp_backgroundColor="?attr/colorAccent"
                app:snp_max="100"
                app:snp_min="0"
                app:snp_numberColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textTitle"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="@string/chapter"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <com.vi.swipenumberpicker.SwipeNumberPicker
                android:id="@+id/picker_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:snp_arrowColor="@android:color/white"
                app:snp_backgroundColor="?attr/colorAccent"
                app:snp_max="1000"
                app:snp_min="0"
                app:snp_numberColor="@android:color/white" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>